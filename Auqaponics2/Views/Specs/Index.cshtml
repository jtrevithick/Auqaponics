@model IEnumerable<Auqaponics2.Models.Specs>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TankSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WaterTemp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pH)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
