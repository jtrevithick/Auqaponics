        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TankSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaterTemp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pH)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpecsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpecsId">Details</a> |
