            <img src="~/Photos/quick_glimpse-into_aquaponics.jpeg" style="width:100%">
        </div>
        <a class="prev" onclick="plusSlides(-1)">❮</a>
        <a class="next" onclick="plusSlides(1)">❯</a>

        <div class="caption-container">
            <p id="caption"></p>
        </div>

        <div class="row">
            <div class="column">
                <img class="demo cursor" src="~/Photos/Aquaponics_3.jpg" style="width:100%" onclick="currentSlide(1)" alt="Aquaponics full system">
            </div>
            <div class="column">
                <img class="demo cursor" src="~/Photos/Aquaponics_Nitrogen_Cycle.jpg" style="width:100%" onclick="currentSlide(2)" alt="Aquaponics Nitrogen Cycle">
            </div>
            <div class="column">
                <img class="demo cursor" src="~/Photos/fish_plant.jpg" style="width:100%" onclick="currentSlide(3)" alt="Fish and plants">
            </div>
            <div class="column">
                <img class="demo cursor" src="~/Photos/fullsystem.jpg" style="width:100%" onclick="currentSlide(4)" alt="Man working with Aquaponics">
            </div>
            <div class="column">
                <img class="demo cursor" src="~/Photos/goldfish.jpg" style="width:100%" onclick="currentSlide(5)" alt="Goldfish">
            </div>
