                <img class="demo cursor" src="~/Photos/tank1.jpg" style="width:100%" onclick="currentSlide(6)" alt="Tank with plants">
            </div>
            <div class="column">
                <img class="demo cursor" src="~/Photos/Tilapia.jpg" style="width:100%" onclick="currentSlide(7)" alt="Tilapia">
            </div>
